FROM public.ecr.aws/lambda/nodejs:18

# Install all dependencies (including dev dependencies for TypeScript compilation)
COPY package*.json ./
RUN npm ci

# Copy shared code
COPY src/shared/ ./src/shared/

# Copy this specific lambda function
COPY src/lambdas/validate-policy/ ./src/lambdas/validate-policy/

# Copy TypeScript config
COPY tsconfig.json ./

# Build TypeScript
RUN npm run build

# Set the handler to the compiled JavaScript
ENV _HANDLER=dist/lambdas/validate-policy/validate-policy.handler

# Copy Lambda Runtime Interface Emulator for local testing
ADD https://github.com/aws/aws-lambda-runtime-interface-emulator/releases/latest/download/aws-lambda-rie /usr/bin/aws-lambda-rie
RUN chmod 755 /usr/bin/aws-lambda-rie

# Create entrypoint script
COPY local-dev/lambda-entrypoint.sh /lambda-entrypoint.sh
RUN chmod +x /lambda-entrypoint.sh

ENTRYPOINT ["/lambda-entrypoint.sh"]
